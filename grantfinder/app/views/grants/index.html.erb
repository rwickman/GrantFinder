<% provide(:title, 'Results')%>
<main role="main" class="container">
  <h1>Grants</h1>
  <span style="float:left; left: 50%; position: relative;">
    <%= link_to 'Search Page', home_path() %>
  </span>
  <table style="width:100%">
    <tr>
      <th style="width:70%">Title</th>
      <th style="width:10%">Release Date</th> 
      <th style="width:10%">Expiry Date </th>
      <th style="width:10%">Grant Page</th>
    </tr>
    <tbody>
    <% @grant.each do |grant|%>
    <tr style="border-bottom: 0.5px solid black;">
      <td><%= grant.title %></td>
      <td><%= grant.release_date %></td>
      <td><%= grant.expired_date %></td>
      <td><%= link_to 'Show', result_path(grant) %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
  <% if @start != 0 %>
      <span style="float: left;">
        <%= link_to 'Previous Page', params.permit(@start).merge(start: @start - 15) %>
      </span>
  <% end %>
  <span style="float:right">
    <%= link_to 'Next Page', params.permit(@start).merge(start: @start + 15) %>
  </span>
</main><!-- /.container -->
